<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:id="stackPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.faint.controller.CanvasController">
   <children>
      <Canvas fx:id="grid" height="${stackPane.height}" mouseTransparent="true" onHeightChange="#redrawGrid" onWidthChange="#redrawGrid" width="${stackPane.width}" />
      <Pane fx:id="canvas" prefHeight="500.0" prefWidth="1000.0" style="-fx-background-color: TRANSPARENT;" />
   </children>
</StackPane>
